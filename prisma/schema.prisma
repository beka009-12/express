generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// Пользователь
//
model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String?
  avatar   String?
  phone    String?
  role     UserRole @default(USER)

  // Софт-делит для восстановления аккаунтов
  deletedAt DateTime?

  cartItems Cart[]
  orders    Order[]
  stores    Store[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

//
// Магазин
//
model Store {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  logo        String?
  address     String?
  region      String?

  // Верификация и управление магазином
  isVerified Boolean  @default(false) // Проверенный продавец
  isActive   Boolean  @default(true) // Активен ли магазин
  rating     Decimal? @db.Decimal(3, 2) // Средний рейтинг (0.00 - 5.00)

  ownerId Int
  owner   User @relation(fields: [ownerId], references: [id])

  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("stores")
}

//
// Категория с иерархией
//
model Category {
  id       Int    @id @default(autoincrement())
  name     String
  parentId Int?

  parent   Category?  @relation("CategoryTree", fields: [parentId], references: [id])
  children Category[] @relation("CategoryTree")

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, parentId])
  @@map("categories")
}

//
// Продукт
//
model Product {
  id         Int @id @default(autoincrement())
  storeId    Int
  categoryId Int

  title       String
  description String
  images      String[]

  // ⚡ УПРОЩЕНО: brandName вместо отдельной таблицы Brand
  brandName String?

  price    Decimal  @db.Decimal(10, 2)
  oldPrice Decimal? @db.Decimal(10, 2)

  stockCount Int      @default(0)
  tags       String[]

  isActive   Boolean   @default(true)
  archivedAt DateTime?

  store    Store    @relation(fields: [storeId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  cartItems  Cart[]
  orderItems OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
  @@index([price])
  @@map("products")
}

//
// Корзина
//
model Cart {
  id        Int @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int @default(1)

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@map("cart_items")
}

//
// Заказы
//
model Order {
  id     Int         @id @default(autoincrement())
  userId Int
  total  Decimal     @db.Decimal(10, 2)
  status OrderStatus @default(PENDING)

  deliveryName    String
  deliveryPhone   String
  deliveryAddress String

  // Комиссия платформы (важно для маркетплейса!)
  platformFee Decimal? @db.Decimal(10, 2)

  user  User        @relation(fields: [userId], references: [id])
  items OrderItem[]

  // Связь с платежом
  payment Payment?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("orders")
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  price     Decimal @db.Decimal(10, 2)

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}

//
// Платежи (критично для e-commerce!)
//
model Payment {
  id            Int           @id @default(autoincrement())
  orderId       Int           @unique
  amount        Decimal       @db.Decimal(10, 2)
  status        PaymentStatus @default(PENDING)
  paymentMethod String // "card", "cash_on_delivery", "bank_transfer"

  // Опциональные поля для интеграции с платежными системами
  transactionId String? // ID транзакции от платежной системы
  paymentData   Json? // Дополнительные данные

  order Order @relation(fields: [orderId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("payments")
}

//
// Роли пользователей
//
enum UserRole {
  ADMIN // Администратор платформы
  OWNER // Владелец магазина
  USER // Обычный покупатель
}

enum OrderStatus {
  PENDING // Ожидает оплаты
  PAID // Оплачен
  SHIPPED // Отправлен
  COMPLETED // Завершен
  CANCELED // Отменен
}

enum PaymentStatus {
  PENDING // Ожидает оплаты
  COMPLETED // Оплачен
  FAILED // Ошибка оплаты
  REFUNDED // Возврат средств
}
