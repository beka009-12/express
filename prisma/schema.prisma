generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// Пользователь
//
model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String?
  avatar    String?
  phone     String?
  role      UserRole  @default(USER)
  deletedAt DateTime?

  cartItems Cart[]
  orders    Order[]
  stores    Store[]
  favorites Favorite[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

//
// Магазин
//
model Store {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  logo        String?
  address     String?
  region      String?
  isVerified  Boolean  @default(false)
  isActive    Boolean  @default(true)
  rating      Decimal? @db.Decimal(3, 2)

  ownerId Int
  owner   User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
  @@map("stores")
}

//
// Категория с иерархией
//
model Category {
  id       Int    @id @default(autoincrement())
  name     String
  parentId Int? // ✅ ВАЖНО: nullable

  parent   Category?  @relation("CategoryTree", fields: [parentId], references: [id], onDelete: SetNull)
  children Category[] @relation("CategoryTree")

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, parentId])
  @@map("categories")
}

//
// Продукт
//
model Product {
  id         Int @id @default(autoincrement())
  storeId    Int
  categoryId Int

  title       String
  description String
  images      String[]

  brandName String?

  price    Decimal  @db.Decimal(10, 2)
  oldPrice Decimal? @db.Decimal(10, 2)

  stockCount Int      @default(0)
  tags       String[]

  isActive   Boolean   @default(true)
  archivedAt DateTime?

  store    Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  cartItems  Cart[]
  orderItems OrderItem[]
  favorites  Favorite[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
  @@index([price])
  @@index([brandName])
  @@map("products")
}

//
// Корзина
//
model Cart {
  id        Int @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int @default(1)

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@map("cart_items")
}

//
// Заказы
//
model Order {
  id     Int         @id @default(autoincrement())
  userId Int
  total  Decimal     @db.Decimal(10, 2)
  status OrderStatus @default(PENDING)

  deliveryName    String
  deliveryPhone   String
  deliveryAddress String

  platformFee Decimal? @db.Decimal(10, 2)

  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items   OrderItem[]
  payment Payment?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("orders")
}

//
// Избранное
//
model Favorite {
  id        Int @id @default(autoincrement())
  userId    Int
  productId Int

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@map("favorites")
}

//
// Позиции заказа
//
model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  price     Decimal @db.Decimal(10, 2)

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("order_items")
}

//
// Платежи
//
model Payment {
  id            Int           @id @default(autoincrement())
  orderId       Int           @unique
  amount        Decimal       @db.Decimal(10, 2)
  status        PaymentStatus @default(PENDING)
  paymentMethod String // "card", "cash_on_delivery", "bank_transfer"

  transactionId String?
  paymentData   Json?

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("payments")
}

//
// Роли пользователей
//
enum UserRole {
  ADMIN
  OWNER
  USER
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  COMPLETED
  CANCELED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}
